@model IEnumerable<CompanyWeb.Models.Model.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-5">SLİDER</h2>

<p>
   <a href="/Slider/Create/" class="btn btn btn-outline-secondary">CREATE</a>
</p>
<table class="table">
    <tr>
        <th>
            TITLERED
        </th>
        <th>
            TİTLEWHITE
        </th>
        <th>
            EXPLANATION
        </th>
        <th>
            IMAGE
        </th>
        <th>
        </th>

    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Titlered)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Titlewhite)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Explanation)
    </td>
    <td>
        <img src="@item.ImgURL" width="100" height="100"/>
    </td>
    <td>
        <a href="/Slider/Edit/@item.SliderId/" class="btn btn-success">Edit</a>
        <a href="/Slider/Details/@item.SliderId/" class="btn btn-primary">DETAILS</a>
        <a href="/Slider/Delete/@item.SliderId/" class="btn btn-danger">Delete</a>
    </td>

 
</tr>
}

</table>
